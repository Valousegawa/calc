<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context="com.a2017.dev.insta.calculatrice.MainActivity">
    <TextView
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.26"
        android:text="RÃ©sultat"
        android:textSize="40dp"
        android:textAlignment="center"
        android:background="@drawable/rounded_corner"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="0dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.26"
        android:orientation="horizontal">

        <Button
            android:id="@+id/digit1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="1"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="16dp" />

        <Button
            android:id="@+id/digit2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="2"
            tools:layout_editor_absoluteX="103dp"
            tools:layout_editor_absoluteY="16dp" />

        <Button
            android:id="@+id/digit3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="3"
            tools:layout_editor_absoluteX="197dp"
            tools:layout_editor_absoluteY="16dp" />

        <Button
            android:id="@+id/digitP"
            android:layout_width="88dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="+"
            tools:layout_editor_absoluteX="292dp"
            tools:layout_editor_absoluteY="16dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.26"
        android:orientation="horizontal">

        <Button
            android:id="@+id/digit4"
            android:layout_width="88dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="4"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="51dp" />

        <Button
            android:id="@+id/digit5"
            android:layout_width="88dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="5"
            tools:layout_editor_absoluteX="103dp"
            tools:layout_editor_absoluteY="51dp" />

        <Button
            android:id="@+id/digit6"
            android:layout_width="88dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="6"
            tools:layout_editor_absoluteX="197dp"
            tools:layout_editor_absoluteY="51dp" />

        <Button
            android:id="@+id/digitM"
            android:layout_width="88dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="-"
            tools:layout_editor_absoluteX="292dp"
            tools:layout_editor_absoluteY="51dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.26"
        android:orientation="horizontal">

        <Button
            android:id="@+id/digit7"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="7"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="86dp" />

        <Button
            android:id="@+id/digit8"
            android:layout_width="88dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="8"
            tools:layout_editor_absoluteX="103dp"
            tools:layout_editor_absoluteY="86dp" />

        <Button
            android:id="@+id/digit9"
            android:layout_width="88dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="9"
            tools:layout_editor_absoluteX="197dp"
            tools:layout_editor_absoluteY="86dp" />

        <Button
            android:id="@+id/digitMu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="*"
            tools:layout_editor_absoluteX="292dp"
            tools:layout_editor_absoluteY="86dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.26"
        android:orientation="horizontal">

        <Button
            android:id="@+id/digit0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.26"
            android:text="0" />

        <Button
            android:id="@+id/digitPo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.26"
            android:text="." />

        <Button
            android:id="@+id/digitC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="C" />

        <Button
            android:id="@+id/digitD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="/" />

    </LinearLayout>

    <Button
        android:id="@+id/egal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.26"
        android:text="=" />

</LinearLayout>
